    <servlet>
        <servlet-name>helloServlet</servlet-name>
        <servlet-class>com.nhnacademy.exercise.exercise03.HelloServlet</servlet-class>
        <init-param>
            <param-name>title</param-name>
            <param-value>Mr.</param-value>
        </init-param>
        <init-param>
            <param-name>name</param-name>
            <param-value>Herooooo</param-value>
